@page "/"
<h3>Pixel Wall-E</h3>

<div id="app-container">
    <div id="editor-panel">
        <h4>Editor de código</h4>
        <textarea @bind="@codeText" style="width:100%; height:90%; background-color:#1e1e1e; color:white; border:none; font-family:monospace;"></textarea>
        <button @onclick="EjecutarCodigo">Ejecutar</button>
    </div>
    <div id="canvas-panel">
        <h4>Canvas</h4>
        <canvas id="pixel-canvas" width="400" height="400" style="border:1px solid black;"></canvas>
    </div>
</div>

@code {
    private string codeText = "Spawn(0,0)\nColor(\"Black\")\n";

    private void EjecutarCodigo()
    {
        // Aquí irás integrando el lexer, parser y evaluador.
        Console.WriteLine("Ejecutando:\n" + codeText);
    }
}
